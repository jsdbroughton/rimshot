<RibbonControl 
    x:Uid="Rimshot_Ribbon" 
    xmlns="clr-namespace:Autodesk.Windows;assembly=AdWindows" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:gui="clr-namespace:Autodesk.Navisworks.Gui.Roamer.AIRLook;assembly=navisworks.gui.roamer"
    xmlns:tools="clr-namespace:Rimshot;assembly=Rimshot.Rimshot">
    <RibbonTab Id="Rimshot" KeyTip="GR">
        <RibbonPanel x:Uid="RibbonPanel_Workshop">
            <RibbonPanelSource  Id="RibbonPanelSource_RibbonPanel_Workshop" x:Uid="RibbonPanelSource_RibbonPanel_Workshop" KeyTip="RM" Title="Rimshot">
                <gui:NWRibbonButton x:Uid="Button_Workshop_ShowRimshotUI" IsVisible="False" Id="{x:Static tools:Rimshot.Command}" Size="Large" KeyTip="R" ShowText="True" Orientation="Vertical" />
                <gui:NWRibbonButton x:Uid="Button_Speckle_ShowSpeckleUI" IsVisible="False" Id="{x:Static tools:Speckle.Command}" Size="Large" KeyTip="S" ShowText="True" Orientation="Vertical" />
            </RibbonPanelSource>
        </RibbonPanel>

    </RibbonTab>
</RibbonControl>